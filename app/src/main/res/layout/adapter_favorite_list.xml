<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/adp_fav_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFavoriteImage"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:src="@drawable/ic_placeholder"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="11"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle_FavoriteAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:layout_weight="3"
                />
            <TextView
                android:id="@+id/tvPrice_FavoriteAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:layout_weight="3"
                />
            <LinearLayout
                android:id="@+id/llButton_FavoriteAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="5"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvDeleteFav_FavoriteAdapter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/background"
                    android:textColor="@color/blue"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tvRemoveFav_FavoriteAdapter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-Remove"

                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:background="@color/red"
                    android:textColor="@color/white"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tvAddFav_FavoriteAdapter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="+ Add"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"
                    />
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/_2sdp"
        ></View>

</LinearLayout>