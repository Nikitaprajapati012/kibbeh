<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/adapter_recipes_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/background_green_corner" />

    <TextView
        android:id="@+id/adapter_recipes_recipetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="TextView"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/adapter_recipes_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/adapter_recipes_image"
        android:layout_alignLeft="@+id/adapter_recipes_recipetext"
        android:layout_alignStart="@+id/adapter_recipes_recipetext"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/adapter_recipes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adapter_recipes_author"
        android:layout_alignLeft="@+id/adapter_recipes_author"
        android:layout_alignStart="@+id/adapter_recipes_author"
        android:layout_marginBottom="13dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />
</RelativeLayout>