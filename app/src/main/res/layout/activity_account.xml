<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/actionbar"
        />

    <TextView
        android:id="@+id/tv_detail"
        android:padding="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/header"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp"
        android:text="@string/personal_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    
    
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lv1"
        android:layout_below="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <EditText
            android:hint="@string/firt_name"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/et_account_firt_name"
            android:background="@drawable/corner_white_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp" />
        
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/lv1"
        android:id="@+id/lv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:hint="@string/last_name"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/et_account_last_name"
            android:background="@drawable/corner_white_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/lv2"
        android:id="@+id/lv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:hint="@string/phone"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/et_account_phone"
            android:background="@drawable/corner_white_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lv4"
        android:layout_below="@+id/lv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_account_save_info"
            android:hint="@string/save_info"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="#2196F3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/lv4"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">

        <TextView
          android:text="@string/account_information"
            android:textAllCaps="true"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/grey"
            android:layout_gravity="center_horizontal"
            android:id="@+id/et_account_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:weightSum="15">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:text="Email"
                />
            <TextView
                android:id="@+id/tvEmailChange"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tvChangeEmail"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="Change"
                android:textStyle="bold"
                android:textColor="@color/blue"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:weightSum="15">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:text="Password"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:text="*****"
                />
            <TextView
                android:id="@+id/tvChangePassword"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Change"
                android:textStyle="bold"
                android:textColor="@color/blue"
                />

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>