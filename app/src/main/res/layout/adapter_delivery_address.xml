<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adp_delivery_add_label"
        android:text="Law garden"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/adp_delivery_add_label"
        android:layout_width="match_parent"
        android:text="addess type"
        android:id="@+id/adb_delivery_add_resident"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/adb_delivery_add_resident"
        android:id="@+id/adp_delivery_add_address"
        android:text="address kvhjkl sdbh gkjs vkj sbkvjsbkvjsbvkjsdvgs"
       android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/adp_delivery_tv_delevery_here"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/adp_delivery_add_zipcode"
        android:layout_width="match_parent"
        android:text="2000"
        android:layout_below="@+id/adp_delivery_add_address"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:padding="@dimen/_4sdp"
        android:id="@+id/adp_delivery_tv_delevery_here"
        android:text="@string/Delivery_here"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>