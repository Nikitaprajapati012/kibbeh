<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/header"
        layout="@layout/actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">

        <ImageView
            android:id="@+id/activity_reci_iv_header"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="hello this is test"
            android:padding="@dimen/_4sdp"

            android:textColor="@color/white"
            android:id="@+id/activity_reci_tv_owner_name"

            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="@dimen/_4sdp"
            android:id="@+id/activity_reci_tv_name"
            android:layout_width="wrap_content"
            android:text="hello this is test"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/white"
            android:layout_above="@+id/activity_reci_tv_owner_name"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_weight="1"
            android:id="@+id/activity_rec_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <TextView
              android:layout_margin="@dimen/_10sdp"
              android:id="@+id/tv_recip_detail"
              android:layout_width="match_parent"
              android:text="helllo this is in test"
              android:layout_height="match_parent" />

        </ScrollView>

    </LinearLayout>
</LinearLayout>