<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/background"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/pupup_header_name"
        android:padding="@dimen/_10sdp"
        android:text="Add An Address"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/location_note" />

        <RadioGroup
            android:id="@+id/radioAddressDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <RadioButton
                android:id="@+id/radioResidential"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:shadowColor="@color/blue"
                android:text="@string/radio_residencial" />

            <RadioButton
                android:id="@+id/radioBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/blue"
                android:text="@string/radio_business" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Label" />

            <EditText
                android:id="@+id/etLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_white_edt"
                android:hint="Label"
                android:padding="@dimen/_10sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:text="Address" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_white_edt"
                android:hint="Address"
                android:padding="@dimen/_10sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:text="Postal Code" />

            <EditText
                android:id="@+id/etPostalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_white_edt"
                android:hint="Postal Code"
                android:padding="@dimen/_10sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:weightSum="2">

            <Button
                android:id="@+id/btCancelAddressDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/cutom_rectangle_bg"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btSaveAddressDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/cutom_rectangle_bg"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>