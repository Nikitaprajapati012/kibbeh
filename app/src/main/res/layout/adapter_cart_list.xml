<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/adapter_home_product_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/adp_linear"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/adp_cart_image"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:background="@drawable/ic_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_4sdp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/adp_cart_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="@dimen/_14sdp" />


                <LinearLayout
                    android:padding="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                  >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/adp_cart_tv_itme_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:background="@drawable/background_white_corner"
                        android:gravity="right|center"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="1000"
                        android:textSize="@dimen/_14sdp" />



                        <LinearLayout
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_width="0dp"
                            android:id="@+id/adp_cart_tv_price"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:text="200000"
                                android:id="@+id/adp_tv_cart_total"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/_14sdp"
                                android:layout_height="match_parent" />
                            <!--<Button-->

                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_marginLeft="@dimen/_10sdp"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_weight="1"-->
                                <!--android:background="@color/blue"-->
                                <!--android:text="@string/add_product"-->
                                <!--android:textColor="@color/white"-->
                                <!--android:id="@+id/adp_cart_btn_add" />-->
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/adp_cart_iv_count_up"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/background_white_corner"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/ic_up" />

                            <ImageView
                                android:id="@+id/adp_cart_iv_count_down"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/background_white_corner"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/ic_down" />
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
